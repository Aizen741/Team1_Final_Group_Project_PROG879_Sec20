<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <Button
        android:id="@+id/add_expense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_expense"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_margin"/>

    <Button
        android:id="@+id/add_budget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_budget"
        android:layout_below="@id/add_expense_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/medium_margin"/>

    <Button
        android:id="@+id/view_summary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_budget"
        android:layout_below="@id/add_budget_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/medium_margin"/>

</RelativeLayout>
